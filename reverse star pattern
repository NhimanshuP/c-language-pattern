
int main() {
    // Write C code here
    printf("Try programiz.pro");

    int n;
    printf("enter the value of n ");
    scanf("%d",&n);
    for(int i=0;i<n;i++){
        for(int j=0;j<n;j++){
          if(j<i){
           printf(" ");
          }
       else{
           printf("*");
       }
     
    }
    printf("\n");
        }

    return 0;
